<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% for (let i=0; i<newListItems.length; i++) { %>
      <form action="/<%=testingme%> " method="post">
        <div class="item">
          <input type="checkbox" name="checkedDelete" value="<%=newListItems[i]._id%>" onchange="this.form.submit()">
          <p><%=  newListItems[i].name  %></p>
        </div>
        <input type="hidden"> <!--this is use to add a hidden input so that we can get a value -->
      </form>
      <% } %>



      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%=listTitle%>">+</button>
      </form>


      <form action="/" method="post">
        <div>
          <input type="text" name="customizeNew" placeholder="customize your own list">
          <button type="submit" name="newCustomizedList" value="anotherCustomize"></button>
        </div>
      </form>
  </div>

<%- include("footer") -%>
